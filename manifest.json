{
    "manifest_version": 2,
    "name": "Right-Click WalkScore",
    "description": "Display the WalkScore of any address",
    "homepage_url": "https://github.com/sarahhagstrom/chrome-walkscore/blob/master/README.md",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "version": "1.0",
    "options_page": "options.html",
    "permissions": [
        "contextMenus"
    ],
    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["http://*/*"],
            "js": ["popup.js"]
        }
    ]
}